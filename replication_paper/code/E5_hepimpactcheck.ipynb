# --- E5: Pun Impact Checking (R -> Python) ---
# Requirements: pandas, numpy, matplotlib

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# 0) File path (change if needed)
CSV_PATH = "/home/limorgu/coding/replications/replication_paper/data/input/punimpactcheckE5.csv"  # put your local path here

# 1) Load
E5 = pd.read_csv(CSV_PATH, sep=";")

# 2) Split to Player A (conditions 3/4) and Player B (5/6)
PlayerA = E5[E5["Condition"].isin([3, 4])].copy()
PlayerB = E5[E5["Condition"].isin([5, 6])].copy()

# Keep the same column selections as the R code
PlayerA = PlayerA.loc[:, list(E5.columns[:16]) + list(E5.columns[30:32])]
PlayerB = PlayerB.loc[:, list(E5.columns[:2]) + list(E5.columns[16:32])]

# 3) Comprehension scores (same items as in R)
PlayerA["comp"] = PlayerA[[
    "A1comp1","A1comp2","A1comp3","A1comp4",
    "A2comp1","A2comp2","A2comp3","A2comp4OB","A2comp4HID"
]].sum(axis=1, skipna=True)

PlayerB["comp"] = PlayerB[[
    "G1Bcomp1","G1Bcomp2","G1Bcomp3","G1Bcomp4",
    "G2Bcomp1","G2Bcomp2","G2Bcomp3"
]].sum(axis=1, skipna=True)

# 4) Recode conditions (A: 1=observable if Condition==3; B: 1=observable if Condition==5)
PlayerA["conditionA"] = (PlayerA["Condition"] == 3).astype(int)
PlayerB["conditionB"] = (PlayerB["Condition"] == 5).astype(int)

# 5) Coalesce variables (as in R)
#    checking: 1=checked impact, 0=didn't; punishing: 1=punished, 0=didn't
PlayerA["checking"]  = PlayerA["checkObs"].combine_first(PlayerA["checkHid"])
PlayerA["punishing"] = PlayerA["calcPun"].combine_first(PlayerA["uncalcPun"])

# ---------- Primary figure: Player A % who check (observable vs hidden) ----------
# (R computed raw proportions of checkObs / checkHid in each condition)
obs = PlayerA[PlayerA["conditionA"] == 1]
hid = PlayerA[PlayerA["conditionA"] == 0]

p_obs = obs["checkObs"].sum() / len(obs)   # proportion checking in observable
p_hid = hid["checkHid"].sum() / len(hid)   # proportion checking in hidden

checkPercObs = 100 * p_obs
checkPercHid = 100 * p_hid

# 95% CI via normal approximation (same logic as the R plotting block)
z = 1.959963984540054
def ci_pct(p, n):
    se = np.sqrt(p*(1-p)/n)
    return 100*(p - z*se), 100*(p + z*se)

ci_obs = ci_pct(p_obs, len(obs))
ci_hid = ci_pct(p_hid, len(hid))

print(f"Observable: {checkPercObs:.2f}%  CI95% [{ci_obs[0]:.2f}, {ci_obs[1]:.2f}]  (n={len(obs)})")
print(f"Hidden:     {checkPercHid:.2f}%  CI95% [{ci_hid[0]:.2f}, {ci_hid[1]:.2f}]  (n={len(hid)})")

# 6) Bar chart (to match the paperâ€™s styling)
labels   = ["Observable", "Hidden"]
heights  = [checkPercObs, checkPercHid]
ci_lows  = [checkPercObs - ci_obs[0], checkPercHid - ci_hid[0]]
ci_highs = [ci_obs[1] - checkPercObs, ci_hid[1] - checkPercHid]
yerr = np.vstack([ci_lows, ci_highs])

fig, ax = plt.subplots(figsize=(5.2, 4))
bars = ax.bar(labels, heights, yerr=yerr, capsize=6, edgecolor="black")
ax.set_title("Exp. 5: Pun Impact Checking")
ax.set_ylabel("Percentage who check")
ax.set_ylim(0, 100)
plt.tight_layout()
plt.show()

# ---------- Player B prep (for downstream H6.2 / H11.2 / H12.2 models) ----------
# only observable B responses, reshape to long with punishing & checking indicators
PlayerB2 = PlayerB[PlayerB["conditionB"] == 1][["PID","punUncalc","punCalc","noUncalc","noCalc"]].copy()
B_long = (
    PlayerB2.melt(id_vars="PID", var_name="name", value_name="sent")
            .assign(
                punishing=lambda d: d["name"].str.contains("pun").astype(int),
                checking=lambda d: d["name"].str.contains("Calc").astype(int)
            )[["PID","punishing","checking","sent"]]
)

# convert from pence to percent of endowment (exactly as in R)
B_long["sent"] = np.where(B_long["sent"] >= 1, B_long["sent"]*100/10, B_long["sent"])

# sanity check (means by cell)
print("\nPlayer B (observable) means by punishing x checking:")
print(B_long.groupby(["punishing","checking"])["sent"].mean().round(3))





